<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.laba9fx.Calculator"
          hgap="10"
          vgap="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
    <TextField fx:id="display" GridPane.columnSpan="4" GridPane.rowIndex="0" editable="false" alignment="CENTER_RIGHT"/>
    <Button text="7" GridPane.rowIndex="1" onAction="#handleDigitPress"/>
    <Button text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#handleDigitPress"/>
    <Button text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#handleDigitPress"/>
    <Button text="/" GridPane.columnIndex="3" GridPane.rowIndex="1" onAction="#handleOperatorPress"/>
    <Button text="4" GridPane.rowIndex="2" onAction="#handleDigitPress"/>
    <Button text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#handleDigitPress"/>
    <Button text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#handleDigitPress"/>
    <Button text="*" GridPane.columnIndex="3" GridPane.rowIndex="2" onAction="#handleOperatorPress"/>
    <Button text="1" GridPane.rowIndex="3" onAction="#handleDigitPress"/>
    <Button text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#handleDigitPress"/>
    <Button text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#handleDigitPress"/>
    <Button text="-" GridPane.columnIndex="3" GridPane.rowIndex="3" onAction="#handleOperatorPress"/>
    <Button text="0" GridPane.columnSpan="2" GridPane.rowIndex="4" onAction="#handleDigitPress"/>
    <Button text="." GridPane.columnIndex="2" GridPane.rowIndex="4" onAction="#handleDigitPress"/>
    <Button text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" onAction="#handleEqualsPress"/>
    <Button text="C" GridPane.columnSpan="4" GridPane.rowIndex="5" onAction="#handleClearPress"/>
</GridPane>