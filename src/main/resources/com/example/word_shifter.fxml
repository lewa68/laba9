        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
    <HBox spacing="10">
        <TextField fx:id="textField1" prefWidth="200"/>
        <Button fx:id="swapButton" text="-->" onAction="#handleSwapButtonAction"/>
        <TextField fx:id="textField2" prefWidth="200"/>
    </HBox>
</VBox>