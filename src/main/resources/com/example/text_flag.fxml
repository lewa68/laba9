<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.laba9fx.TextFlag"
      spacing="10">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
    <HBox spacing="10">
        <Label text="Top Strip:"/>
        <RadioButton text="Red" fx:id="redTop" mnemonicParsing="false"/>
        <RadioButton text="Green" fx:id="greenTop" mnemonicParsing="false"/>
        <RadioButton text="Blue" fx:id="blueTop" mnemonicParsing="false"/>
        <RadioButton text="White" fx:id="whiteTop" mnemonicParsing="false"/>
        <RadioButton text="Yellow" fx:id="yellowTop" mnemonicParsing="false"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Middle Strip:"/>
        <RadioButton text="Red" fx:id="redMiddle" mnemonicParsing="false"/>
        <RadioButton text="Green" fx:id="greenMiddle" mnemonicParsing="false"/>
        <RadioButton text="Blue" fx:id="blueMiddle" mnemonicParsing="false"/>
        <RadioButton text="White" fx:id="whiteMiddle" mnemonicParsing="false"/>
        <RadioButton text="Yellow" fx:id="yellowMiddle" mnemonicParsing="false"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Bottom Strip:"/>
        <RadioButton text="Red" fx:id="redBottom" mnemonicParsing="false"/>
        <RadioButton text="Green" fx:id="greenBottom" mnemonicParsing="false"/>
        <RadioButton text="Blue" fx:id="blueBottom" mnemonicParsing="false"/>
        <RadioButton text="White" fx:id="whiteBottom" mnemonicParsing="false"/>
        <RadioButton text="Yellow" fx:id="yellowBottom" mnemonicParsing="false"/>
    </HBox>
    <Button fx:id="drawButton" text="Draw Flag" />
</VBox>